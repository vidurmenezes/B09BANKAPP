<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.bank.PromoteTeller"
                                             tools:layout_editor_absoluteY="16dp"
                                             tools:layout_editor_absoluteX="16dp"
                                             android:theme="@android:style/Theme.NoTitleBar">

  <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@color/colorPrimaryDark"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0"
      tools:layout_constraintBottom_creator="1"
      tools:layout_constraintLeft_creator="1"
      tools:layout_constraintRight_creator="1"
      tools:layout_constraintTop_creator="1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp"
        app:srcCompat="@drawable/goochilog"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="115dp" />

    <TextView
        android:id="@+id/TellerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="70dp"
        android:text="ACCOUNT TRANSFER"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/accountName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="ACCOUNT NAME 2"
        android:textColor="#8cbb17"
        android:inputType="text"
        android:layout_below="@+id/accountName1" android:layout_alignStart="@+id/accountName1"/>
    <EditText
        android:id="@+id/accountName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="ACCOUNT NAME 1"
        android:inputType="text"
        android:textColor="#8cbb17" android:layout_below="@+id/TellerText"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/userTransferAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:hint="AMOUNT"
        android:inputType="text"
        android:textColor="#8cbb17"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/accountName2" android:layout_alignStart="@+id/accountName2"/>
    <Button
        android:id="@+id/accountTransferSubmit"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#53BFD8"
        android:text="Submit"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#f1f1f1"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/userTransferAmount"
        android:layout_alignStart="@+id/userTransferAmount"
        android:layout_alignEnd="@+id/userTransferAmount"/>

    <Button
        android:id="@+id/Exit"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/reddish"
        android:text="EXIT"
        android:textColor="@android:color/background_light"
        android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"/>

  </RelativeLayout>


</android.support.constraint.ConstraintLayout>


