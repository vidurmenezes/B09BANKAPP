<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        tools:context="com.bank.MakeWithdrawl"
    tools:layout_editor_absoluteY="16dp"
    tools:layout_editor_absoluteX="16dp"
    android:theme="@android:style/Theme.NoTitleBar">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <EditText
            android:id="@+id/amountTeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="29dp"
            android:ems="10"
            android:hint="AMOUNT"
            android:inputType="number"
            android:textColor="#8cbb17"
            android:layout_below="@+id/nameOfAccount2"
            android:layout_alignStart="@+id/nameOfAccount2"/>
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="62dp"
            app:srcCompat="@drawable/goochilog"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="115dp"/>

        <TextView
            android:id="@+id/TellerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="70dp"
            android:text="MAKE WITHDRAWL"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/nameOfAccount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/TellerText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:hint="NAME OF ACCOUNT"
            android:inputType="text"
            android:textColor="#8cbb17"/>
        <Button
            android:id="@+id/amountTellerSubmit"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#53BFD8"
            android:text="Submit"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#f1f1f1"
            android:textSize="18sp"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/amountTeller" android:layout_alignStart="@+id/amountTeller"
            android:layout_alignEnd="@+id/amountTeller"/>

        <Button
            android:id="@+id/Exit"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/reddish"
            android:text="EXIT"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/amountTellerSubmit" android:layout_centerHorizontal="true"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>


